#!/usr/bin/env node

var program = require('commander');
var blessed = require('blessed');
var App     = require('../lib/app');

program
  .version('0.0.1')
  .option('-p --path [path]', 'Path to project')
  .option('-l --log [file]', 'Write logs to filename')
  .parse(process.argv);

process.title = 'qissues';

var app = new App(blessed.screen(), {
  cwd:     program.path || process.cwd(),
  logfile: program.logfile
});

app.start(process.argv[3] || 'listIssues');
